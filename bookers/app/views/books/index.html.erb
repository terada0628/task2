<p id="notice"></p>
<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>

        <tr>
            <td>
                <%= book.title %>
            </td>
            <td>
                <%= book.body %>
            </td>
            <td><%= link_to "Show",book_path(book.id) %></td>
            <td><%= link_to "Edit",edit_book_path(book.id) %></td>
            <td><%= link_to "Destroy",book_path(book),method: :delete,"data-confirm" => "Are you sure?" %></td>
        </tr>

        <% end %>

    </tbody>
</table>

<h2>New Book</h2>

<% if @book.errors.any? %>
  <div id="error_explanation">
    <h3>入力した内容にerrorが<%= @book.errors.count %>件あります</h3>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li class="error_message"><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model:@book,local:true do |f| %>

 <div class="new">
  <div>Title</div>
  <%= f.text_field:title %>
 </div>

 <div class="new">
  <div>Body</div>
  <%= f.text_area:body %>
 </div>

 <%= f.submit " Create Book " %>

<% end %>
