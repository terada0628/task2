<p id="notice"></p>
<h1>Books</h1>

<table>
    <thead>
        <tr>
            <th>Title</th>
            <th>Body</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @books.each do |book| %>

        <tr>
            <td>
                <%= book.title %>
            </td>
            <td>
                <%= book.body %>
            </td>
            <td><a>Show</a></td>
            <td><a>Edit</a></td>
            <td><a>Destroy</a></td>
        </tr>

<% end %>

    </tbody>
</table>

<h2>New Book</h2>

<%= form_with model:@book,local:true do |f| %>

 <div class="new">
  <div>Title</div>
  <%= f.text_field:title %>
 </div>

 <div class="new">
  <div>Body</div>
  <%= f.text_area:body %>
 </div>

 <%= f.submit "Create Book" %>

<% end %>